/**
 *	Date conversion utility function.
 */
function _convert_ddate_to_pdate($ddate){
		$months = array('Jan','Feb','Mar','Apr','May','Jun','Jul','Aug','Sep','Oct','Nov','Dec');
		$pdate = $months[$ddate['month']-1].'-'.$ddate['day'].'-'.$ddate['year'];
	return $pdate;
}



