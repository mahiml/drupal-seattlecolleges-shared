; $Id$

name = NSCC News Leech
description = NSCC 960 News subtheme for tersely formatting News nodes as HTML snippets devoid of page accoutrement. Used mainly when presenting full news items as part of pages in other NSCC sites.
core = 6.x
;screenshot = imgs/screenshot.png
base theme = nscc_news

;regions[header] = Header
;regions[campus_alert] = Campus Alert
;regions[toolbox] = Toolbox
;regions[quicklinks] = Site Quicklinks
;regions[content_leader] = Content Leader
;regions[people_header] = Profile Header
regions[content] = Primary Content
;regions[content_follower] = Content Follower
;regions[left] = Left sidebar
;regions[right] = Right sidebar
;regions[footer] = Footer
;regions[footer_left] = Footer Left
;regions[footer_mid_left] = Footer Middle Left
;regions[footer_mid_right] = Footer Middle Right
;regions[footer_right] = Footer Right

;features[] = logo
;features[] = name
;features[] = slogan
;features[] = mission
;features[] = node_user_picture
;features[] = search
;features[] = favicon
;features[] = primary_links
;features[] = secondary_links

; Global Stylesheets
;stylesheets[all][] = css/nscc-news.css

; IE conditional stylesheets
; Functional support provided by conditional_styles module
;conditional-stylesheets[if lt IE 9][all][] = css/nscc-news-fixie-sub9.css
;conditional-stylesheets[if lt IE 8][all][] = css/nscc-news-fixie-sub8.css

; Global Script files
;scripts[] = js/nscc-news.js
